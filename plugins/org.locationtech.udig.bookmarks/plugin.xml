<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="%Bookmarks.category"
            id="org.locationtech.udig.bookmarks">
      </category>
      <view
            name="%Bookmarks.view"
            icon="icons/eview16/bkmrk_nav.gif"
            category="org.locationtech.udig.bookmarks"
            class="org.locationtech.udig.bookmarks.internal.ui.BookmarksView"
            id="org.locationtech.udig.bookmarks.internal.ui.BookmarksView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="net.refractions.udig.ui.mapPerspective">
         <view
               closeable="true"
               id="org.locationtech.udig.bookmarks.internal.ui.BookmarksView"
               moveable="true"
               ratio="0.5"
               relationship="stack"
               relative="net.refractions.udig.project.ui.layerManager"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
         <viewShortcut id="org.locationtech.udig.bookmarks.internal.ui.BookmarksView"/>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="org.locationtech.udig.bookmarks.viewbookmarkscontribution"
            targetID="org.locationtech.udig.bookmarks.internal.ui.BookmarksView">
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               disabledIcon="icons/dlcl16/add_bkmrk.gif"
               icon="icons/elcl16/add_co.gif"
               id="org.locationtech.udig.bookmarks.actions.addbookmarkaction"
               label="%Bookmarks.actions.AddBookmark"
               style="push"
               toolbarPath="additions"
               tooltip="%Bookmarks.actions.AddBookmark.tt"/>
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               disabledIcon="icons/bookmark_remall.gif"
               icon="icons/elcl16/removeall_co.gif"
               id="org.locationtech.udig.bookmarks.actions.removeallbookmarksaction"
               label="%Bookmarks.actions.RemoveAllBookmarks"
               style="push"
               toolbarPath="additions"
               tooltip="%Bookmarks.actions.RemoveAllBookmarks.tt">
         </action>
      </viewContribution>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.locationtech.udig.bookmarks.bookmarkobjectcontribution"
            objectClass="org.locationtech.udig.bookmarks.Bookmark">
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               enablesFor="+"
               id="org.locationtech.udig.bookmarks.actions.removebookmarkaction"
               label="%Bookmarks.actions.Remove"
               menubarPath="additions"
               style="push"
               tooltip="%Bookmarks.actions.Remove.tt"/>
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               enablesFor="1"
               id="org.locationtech.udig.bookmarks.actions.gotobookmarkaction"
               label="%Bookmarks.actions.GoToBookmark"
               menubarPath="additions"
               style="push"
               tooltip="%Bookmarks.actions.GoToBookmark.tt"/>
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               enablesFor="1"
               id="org.locationtech.udig.bookmarks.actions.renamebookmarkaction"
               label="%Bookmarks.actions.Rename"
               menubarPath="additions"
               tooltip="%Bookmarks.actions.Rename.tt"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.locationtech.udig.bookmarks.mapwrappercontribution"
            objectClass="org.locationtech.udig.bookmarks.internal.MapReference">
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               enablesFor="+"
               id="org.locationtech.udig.bookmarks.actions.removemapaction"
               label="%Bookmarks.actions.RemoveAll"
               menubarPath="additions"
               tooltip="%Bookmarks.actions.RemoveAll.tt"/>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.locationtech.udig.bookmarks.projectwrappercontribution"
            objectClass="org.locationtech.udig.bookmarks.internal.ProjectWrapper">
         <action
               class="org.locationtech.udig.bookmarks.internal.actions.BookmarkAction"
               enablesFor="+"
               id="org.locationtech.udig.bookmarks.actions.removeprojectaction"
               label="%Bookmarks.actions.Remove"
               menubarPath="additions"
               tooltip="%Bookmarks.actions.Remove.tt2"/>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="org.locationtech.udig.bookmarks.internal.BookmarkServiceFactory">
         <service
               serviceClass="org.locationtech.udig.bookmarks.IBookmarkService">
         </service>
      </serviceFactory>
   </extension>
   <extension
         point="net.refractions.udig.ui.aoi">
      <aoi
            class="org.locationtech.udig.bookmarks.BookmarkAOIStrategy"
            id="org.locationtech.udig.bookmarks.bookmarkAOIStrategy"
            name="Bookmark"
            page="org.locationtech.udig.bookmarks.internal.ui.BookmarkAOIPage">
      </aoi>
   </extension>
</plugin>
